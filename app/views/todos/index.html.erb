<main class="TodoPageMain">
  <h1 class="TodoPage-title">My Todo-list</h1>
  <%= form_with(url: "/todos", method: "post", class: "AddTodo") do %>
    <%= text_field_tag "todo_text", nil, placeholder: "What's next?", class: "AddTodo-text" %>
    <%= date_field_tag "due_date", nil, class: "AddTodo-date" %>
    <%= submit_tag "Add", class: "AddTodo-button" %>
  <% end %>
  <%= render partial: "todo-section", locals: { section_title: "Overdue", todos: @todos.overdue.order_by_due_date, show_due_date: true } %>
  <%= render partial: "todo-section", locals: { section_title: "Due Today", todos: @todos.due_today.order_by_id, show_due_date: false } %>
  <%= render partial: "todo-section", locals: { section_title: "Due Later", todos: @todos.due_later.order_by_due_date, show_due_date: true } %>
</main>
